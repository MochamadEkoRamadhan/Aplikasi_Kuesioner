<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".RadioSoal3">

    <ImageView
        android:id="@+id/nomer3"
        android:layout_width="359dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg2"
        android:layout_marginTop="20dp">
    </ImageView>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/ic_3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp">

    </ImageView>

    <ImageView
        android:layout_below="@id/nomer3"
        android:layout_width="359dp"
        android:layout_height="600dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg2"
        android:layout_marginTop="20dp">
    </ImageView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:text="Puaskah Anda Dengan Packaging Kami ?"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#2E5A81"
        android:textSize="30dp" />

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="460dp"
        android:paddingLeft="50dp">

        <Button
            android:id="@+id/rbSP2"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_marginRight="34dp"
            android:background="@drawable/rounded_button"
            android:drawableTop="@drawable/ic_sangat_puas"
            android:paddingTop="10dp"
            android:text="Sangat Puas"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/rbP2"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_marginRight="34dp"
            android:background="@drawable/rounded_button"
            android:drawableTop="@drawable/ic_puas"
            android:paddingTop="10dp"
            android:text="Puas "
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:id="@+id/tableRow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        android:paddingLeft="50dp">

        <Button
            android:id="@+id/rbTP2"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:layout_marginRight="34dp"
            android:background="@drawable/rounded_button"
            android:drawableTop="@drawable/ic_tidak_puas"
            android:paddingTop="10dp"
            android:text="Tidak Puas"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/rbSTP2"
            android:layout_width="130dp"
            android:layout_height="150dp"
            android:drawableTop="@drawable/ic_sangat_tidak_puas"
            android:background="@drawable/rounded_button"
            android:paddingTop="10dp"
            android:text="Sangat Tidak Puas"
            android:textColor="@color/white"
            android:textSize="11dp"
            android:textStyle="bold" />
    </TableRow>


    <Button
        android:id="@+id/btnSimpan2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="152dp"
        android:layout_marginTop="657dp"
        android:background="@drawable/button"
        android:text="Simpan"
        android:textColor="#FFFFFF"></Button>

</RelativeLayout>